@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Stem Security Challenge</h1>
    <p></p>
 
    <br />
    <br />

    <p>Let's pretend we are on your favourite social media site'</p>
    <p>How easy would it be to hack in, if your password isn't secure?</p>

    <img src="https://t4.ftcdn.net/jpg/03/92/71/99/240_F_392719944_L0LYv3e7QozB2tsj3CfUN0HPC8eZQOWb.jpg" />
    <div class="card p-4">
        <form asp-action="Index" asp-controller="Home" >

            <label asp-for="LogIn"></label>
        
            @Html.EditorFor(m=>m.LogIn) 
        
            

            <label asp-for="Password"></label>
            @Html.EditorFor(m =>m.Password)
   
        <button class="btn btn-primary" type="submit">Submit</button>

    </form>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
</div>



